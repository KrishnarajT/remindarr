# Backend Dev (hot reload)
FROM python:3.12-slim

# OS deps often needed by DB drivers like psycopg2
RUN apt-get update && apt-get install -y --no-install-recommends \
  build-essential libpq-dev curl git \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Python deps (cache-friendly)
COPY requirements.txt .
RUN pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt

# Copy app (bind mount will override during dev)
COPY ./app ./app
COPY alembic.ini .
COPY ./alembic ./alembic

ENV PYTHONUNBUFFERED=1

EXPOSE 8000

# Use --reload for live code reload
# On Windows/WSL file watching is fine; on pure Docker Desktop + NTFS you may prefer --reload-dir=/app/app
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
